{% extends 'layout.html.twig' %}

{% block body %}
    {% for post in posts %}
        <article class="blog">
            <div class="date"><time datetime="{{ post.created|date('c') }}">{{ post.created|date('l, F j, Y') }}</time></div>
            <header>
                <h2><a href="{{ path('ravtovich_blog_show', { 'id': post.id, 'slug': post.slug }) }}">{{ post.title }}</a></h2>
            </header>

            <img src="{{ asset('/images')}}/{{  post.image|join }}" >
            {#<br>#}
            <div class="snippet">
                <p>{{ post.text(500) }}</p>
                <p class="continue"><a href="{{ path('ravtovich_blog_show', { 'id': post.id, 'slug': post.slug }) }}">Continue reading...</a></p>
            </div>

            <footer class="meta">
                <p>Comments: {{ post.comments|length }}</p>
                <p>Posted by <span class="highlight">{{ post.author }}</span> at {{ post.created|date('h:iA') }}</p>
                <p>Tags: <span class="highlight">{{ post.tags }}</span></p>
            </footer>
        </article>
    {% else %}
        <p>There are no blog entries for symblog</p>
    {% endfor %}

{% endblock %}